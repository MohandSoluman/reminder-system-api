# =============================
# üåç Application Configuration
# =============================
PORT=3000
NODE_ENV=development

# =============================
# üõ¢Ô∏è Database (MySQL)
# =============================
DB_HOST=127.0.0.1
DB_PORT=3306
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=reminderDB
# MYSQL_USER=appuser
# MYSQL_PASSWORD=appuserpassword

# =============================
# üîê Authentication (JWT)
# =============================
JWT_ACCESS_SECRET=your_jwt_access_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_EXPIRATION=3600s

# =============================
# üöÄ Redis Configuration
# =============================
## Use 'redis_container' if running inside Docker
REDIS_PORT=6379
REDIS_HOST=localhost

# =============================
# üî• Firebase Configuration
# =============================
## Store the Firebase service account key as a JSON file and provide the file path
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-service-account.json

# =============================
# üìß Email SMTP Configuration (SendGrid/Mailgun)
# =============================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key

# =============================
# üìß MailTrap (For Testing Emails)
# =============================
MAILTRAP_API_TOKEN=your_mailtrap_api_token
